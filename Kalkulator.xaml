<Window x:Class="KalkWithOptions.Kalkulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KalkWithOptions"
        mc:Ignorable="d"
        Title="Kalkulator" Height="450" Width="800" WindowState ="Maximized" WindowStyle="None" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/abstract-background-with-waves-pastel-colors-vector-1993205.jpg"/>
        </Grid.Background>
        <Button Content="Izlaz" Click="ButtonClick" VerticalAlignment="Top" Height="45" Background="#FF71FFC8" FontSize="36" FontFamily="Arial"/>
        <Grid Margin="0,80,0,80">
            <Viewbox>
                <TextBox x:Name="equationTextBox" FontSize="8" KeyDown="TextBox_KeyDown" FontFamily="Verdana"/>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
